@model LoginViewModel

<div class="container login-wrapper">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="login-card animate">
                <div class="card-header-custom">
                    <h2>Welcome Back</h2>
                    <p class="text-white-50">Login to your account</p>
                </div>
                <div class="card-body p-4">
                    <form action="Login" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="custom-input-group">
                            <span class="input-icon"><i class="fa fa-envelope"></i></span>
                            <input asp-for="Email" class="form-control custom-input" placeholder="Email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="custom-input-group mt-4">
                            <span class="input-icon"><i class="fa fa-lock"></i></span>
                            <input asp-for="Password" class="form-control custom-input" type="password"
                                placeholder="Password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <div class="remember-me">
                                <input type="checkbox" id="remember">
                                <label for="remember">Remember me</label>
                            </div>
                            <a href="#" class="forgot-link">Forgot Password?</a>
                        </div>

                        <button type="submit" class="login-btn">
                            Sign In <i class="fas fa-arrow-right ms-2"></i>
                        </button>

                        <div class="social-login">
                            <p>Or continue with</p>
                            <div class="social-buttons">
                                <button type="button" class="social-btn google">
                                    <i class="fab fa-google"></i>
                                </button>
                                <button type="button" class="social-btn facebook">
                                    <i class="fab fa-facebook-f"></i>
                                </button>
                                <button type="button" class="social-btn github">
                                    <i class="fab fa-github"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .login-wrapper {
        margin-top: 100px;
        padding-top: 2rem;
        position: relative;
        z-index: 1;
    }

    .login-card {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: all 0.3s ease;
        opacity: 0;
        animation: fadeIn 0.6s ease-out forwards;
    }

    body.dark-mode .login-card {
        background: rgba(30, 30, 30, 0.9);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        overflow: hidden;
        transition: all 0.3s ease;
        opacity: 0;
        animation: fadeIn 0.6s ease-out forwards;
        color: #e0e0e0;
    }

    .card-header-custom {
        background: linear-gradient(45deg, #f48840, #fb9857);
        color: white;
        padding: 2rem;
        text-align: center;
    }

    .custom-input-group {
        position: relative;
        margin-bottom: 1.5rem;
    }

    .input-icon {
        position: absolute;
        left: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #f48840;
    }

    .custom-input {
        padding: 12px 40px;
        border: 2px solid #eee;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .custom-input:focus {
        border-color: #f48840;
        box-shadow: 0 0 0 0.2rem rgba(244, 136, 64, 0.25);
        transform: translateY(-2px);
    }

    .login-btn {
        width: 100%;
        padding: 12px;
        background: linear-gradient(45deg, #f48840, #fb9857);
        border: none;
        border-radius: 8px;
        color: white;
        font-weight: 600;
        margin-top: 1.5rem;
        transition: all 0.3s ease;
    }

    .social-login {
        text-align: center;
        margin-top: 2rem;
        padding-top: 2rem;
        border-top: 1px solid #eee;
    }

    .social-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        margin-top: 1rem;
    }

    .social-btn {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        border: none;
        transition: all 0.3s ease;
    }

    .social-btn.google {
        background: #DB4437;
        color: white;
    }

    .social-btn.facebook {
        background: #4267B2;
        color: white;
    }

    .social-btn.github {
        background: #333;
        color: white;
    }

    .forgot-link {
        color: #f48840;
        text-decoration: none;
        font-size: 0.9rem;
    }

    .remember-me {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes shake {

        10%,
        90% {
            transform: translate3d(-1px, 0, 0);
        }

        20%,
        80% {
            transform: translate3d(2px, 0, 0);
        }

        30%,
        50%,
        70% {
            transform: translate3d(-4px, 0, 0);
        }

        40%,
        60% {
            transform: translate3d(4px, 0, 0);
        }
    }

    @@keyframes pulse {
        0% {
            box-shadow: 0 0 0 0 rgba(244, 136, 64, 0.4);
        }

        70% {
            box-shadow: 0 0 0 10px rgba(244, 136, 64, 0);
        }

        100% {
            box-shadow: 0 0 0 0 rgba(244, 136, 64, 0);
        }
    }
</style>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $(document).ready(function () {
            $('.login-btn').hover(function () {
                $(this).css('animation', 'pulse 1.5s infinite');
            }, function () {
                $(this).css('animation', 'none');
            });

            $('form').on('submit', function () {
                if (!$(this).valid()) {
                    $('.is-invalid').first().parent().addClass('shake');
                    return false;
                }
                $('.login-btn').addClass('loading');
            });
        });
    </script>
}