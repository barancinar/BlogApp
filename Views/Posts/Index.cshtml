@model PostsViewModel

<div class="main-banner header-text">
    <div class="container-fluid">
        <div class="owl-banner owl-carousel">

            @foreach (var post in Model.Posts)
            {
                <div class="item">
                    <img src="~/img/@post.Image" alt="">
                    <div class="item-content">
                        <div class="main-content">
                            <div class="meta-category">
                                <span>@post.Tags.FirstOrDefault()?.Text</span>
                            </div>
                            <a href="/posts/details/@post.Url">
                                <h4>@post.Title</h4>
                            </a>
                            <ul class="post-info">
                                <li><a href="/profile/@post.User.UserName">@post.User.Name</a></li>
                                <li><a href="/posts/details/@post.Url">@post.PublishedOn.ToString("d")</a></li>
                                <li><a href="/posts/details/@post.Url#comments">@post.Comments.Count() Yorum</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

            }


        </div>
    </div>
</div>

