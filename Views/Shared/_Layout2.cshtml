<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="TemplateMo">
    <link
        href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i&display=swap"
        rel="stylesheet">

    <title>Post Blog</title>

    <!-- Bootstrap core CSS -->
    <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">


    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="/assets/css/fontawesome.css">
    <link rel="stylesheet" href="/assets/css/templatemo-stand-blog.css">
    <link rel="stylesheet" href="/assets/css/dark-mode.css">
    <link rel="stylesheet" href="/assets/css/owl.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

</head>

<body>

    <!-- ***** Preloader Start ***** -->
    <div id="preloader">
        <div class="jumper">
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>
    <!-- ***** Preloader End ***** -->

    <!-- Header -->
    <header class="fixed-top">
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand" href="/">
                    <h2>Post Blog<em>.</em></h2>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive"
                    aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ml-5">
                        <li class="nav-item @(ViewContext.HttpContext.Request.Path == "/" ? "active" : "")">
                            <a class="nav-link" href="/">Home
                                <span class="sr-only">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item @(ViewContext.HttpContext.Request.Path == "/Posts" ? "active" : "")">
                            <a href="/Posts" class="nav-link">Popular</a>
                        </li>


                        @if (User.Identity!.IsAuthenticated)
                        {
                            <li class="nav-item @(ViewContext.HttpContext.Request.Path == "/posts/list" ? "active" : "")">
                                <a href="/posts/list" class="nav-link">Posts</a>
                            </li>
                            <li
                                class="nav-item @(ViewContext.HttpContext.Request.Path == $"/profile/{User.Identity.Name}" ? "active" : "")">
                                <a href="/profile/@User.Identity.Name" class="nav-link">@User.Identity.Name</a>
                            </li>
                            <li class="nav-item">
                                <a href="/users/logout" class="nav-link">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item @(ViewContext.HttpContext.Request.Path == "/users/login" ? "active" : "")">
                                <a href="/users/login" class="nav-link">Login</a>
                            </li>
                            <li
                                class="nav-item @(ViewContext.HttpContext.Request.Path == "/users/register" ? "active" : "")">
                                <a href="/users/register" class="nav-link">Register</a>
                            </li>
                        }
                    </ul>
                    <form class="d-flex ml-auto">
                        <input type="checkbox" class="dark-input" id="darkModeToggle" />
                        <label class="dark-label" for="darkModeToggle"></label>
                    </form>
                </div>
            </div>
        </nav>
    </header>



    <div>
        @RenderBody()
    </div>



    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="social-icons">
                        <li><a href="#">Facebook</a></li>
                        <li><a href="#">Twitter</a></li>
                        <li><a href="#">Google</a></li>
                        <li><a href="#">Linkedin</a></li>
                        <li><a href="#">Youtube</a></li>
                    </ul>
                </div>
                <div class="col-lg-12">
                    <div class="copyright-text">
                        <p>Copyright 2024 Baran

                            | Design: <a rel="nofollow" href="https://github.com/barancinar" target="_blank">Baran</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap core JavaScript -->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Additional Scripts -->
    <script src="/assets/js/custom.js"></script>
    <script src="/assets/js/owl.js"></script>
    <script src="/assets/js/slick.js"></script>
    <script src="/assets/js/isotope.js"></script>
    <script src="/assets/js/accordions.js"></script>
    <script src="/assets/js/site.js"></script>

    <script language="text/Javascript">
        cleared[0] = cleared[1] = cleared[2] = 0; //set a cleared flag for each field
        function clearField(t) {                   //declaring the array outside of the
            if (!cleared[t.id]) {                      // function makes it static and global
                cleared[t.id] = 1;  // you could use true and false, but that's more typing
                t.value = '';         // with more chance of typos
                t.style.color = '#fff';
            }
        }
    </script>

    @RenderSection("Scripts", required: false)

</body>

</html>