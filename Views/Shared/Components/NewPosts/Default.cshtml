@model List<Post>

<div class="col-lg-12">
    <div class="sidebar-item recent-posts">
        <div class="sidebar-heading">
            <h2>Recent Posts</h2>
        </div>
        <div class="content">
            <ul>
                @foreach (var post in Model)
                {

                        <li>
                            <a href="/posts/details/@post.Url">
                                <h5>@post.Title</h5>
                                <span>@post.PublishedOn</span>
                            </a>
                        </li>

                }
            </ul>
        </div>
    </div>
</div>